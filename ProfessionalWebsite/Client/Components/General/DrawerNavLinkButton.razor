<div class="nav-item" @onclick='(()=>OnClickCallback.InvokeAsync(""))'>
    <NavLink class="nav-link" href="@Href">
        @if (IconClasses != "")
        {
            <span class="icon @IconClasses" aria-hidden="true"></span>
        }
        @ButtonText
    </NavLink>
</div>

@code {
    [Parameter]
    public bool IsNavLink { get; set; } = true;
    [Parameter]
    public string Href { get; set; } = "";
    [Parameter]
    public string IconClasses { get; set; } = "fa-regular fa-circle";
    [Parameter]
    public string ButtonText { get; set; } = "";
    [Parameter]
    public EventCallback<string> OnClickCallback { get; set; }
}
