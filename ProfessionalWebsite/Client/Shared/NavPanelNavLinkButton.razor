
<div class="nav-item @TopLvlClasses" @onclick='(()=>ButtonClickCallback.InvokeAsync(""))'>
    <NavLink class="nav-link" href="@Href">
        @if (IconClasses != "")
        {
            <span class="icon @IconClasses" aria-hidden="true"></span>
        }        
        @ButtonText
    </NavLink>
</div>

@code {
    [Parameter]
    public string Href { get; set; }
    [Parameter]
    public string IconClasses { get; set; } = "fa-regular fa-circle";
    [Parameter]
    public string TopLvlClasses { get; set; }
    [Parameter]
    public string ButtonText { get; set; }
    [Parameter]
    public EventCallback<string> ButtonClickCallback { get; set; }
}
