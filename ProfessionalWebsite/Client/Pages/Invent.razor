                    }
                    @if (!NavService.SectionedPages[3].Sections[4].IsCurrentPromo)
                    {
                        <div class="section-container">
                            <div class="section-header @NavService.SectionedPages[3].Sections[4].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(4))">
                                Philosophy Orientation App
                                &nbsp;
                                <i class="fa fa-chevron-left"/>
