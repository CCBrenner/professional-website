@page "/invent"

@inject NavService NavService
@implements IDisposable

<PageTitle>Invent - Collyn Brenner</PageTitle>

<DrawerPageTemplate HeaderIconClasses="fa-solid fa-warehouse" HeaderText="Invent">
    <DrawerContent>
        <DrawerNavLinkButton Href="invent#overview" ButtonText="Overview" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(0))" />
        <DrawerNavLinkButton Href="invent#futurevision" ButtonText="Future Vision App" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(1))" />
        <DrawerNavLinkButton Href="invent#unifiedchurch" ButtonText="Unified Church App" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(2))" />
        <DrawerNavLinkButton Href="invent#hangoutavailability" ButtonText="Hang Out Availability App" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(3))" />
        <DrawerNavLinkButton Href="invent#philosophyorientation" ButtonText="Philosophy Orientation App" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(4))" />
        <DrawerNavLinkButton Href="invent#controllerkeyboardprototype" ButtonText="Controller Keyboard Prototype" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(5))" />
        <DrawerNavLinkButton Href="invent#audiogames" ButtonText="Audio Games" OnClickCallback="(()=>NavService.SectionedPages[3].CollapseAllShowOne(6))" />
        <DrawerNavLinkButton Href="collyn#contact" IconClasses="fa-solid fa-envelope" ButtonText="Contact" OnClickCallback='(()=>NavService.NavigateToCollapsibleSectionOfOtherPage(2, 6))' />
    </DrawerContent>
    <PageContent>
        <div class="sub-page-container">
            <div class="sections-container">
                @if (!NavService.SectionedPages[3].ASectionIsCurrentlyPromo
                || NavService.SectionedPages[3].ASectionIsCurrentlyPromo && NavService.SectionedPages[3].Sections[0].IsCurrentPromo)
                {
                    <div class="section-container">
                        <div class="section-header @NavService.SectionedPages[3].Sections[0].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(0))">
                            Overview
                            &nbsp;
                            @if(NavService.SectionedPages[3].Sections[0].IsCollapsedHeader == "collapsed-header")
                            {   <i class="fa fa-chevron-left"/>   }
                            else
                            {   <i class="fa fa-chevron-down"/>   }
                        </div>
                        <div class="section-content @NavService.SectionedPages[3].Sections[0].IsCollapsedContent">
                            <UnderConstruction />
                        </div>
                    </div>
                }
                @if (!NavService.SectionedPages[3].ASectionIsCurrentlyPromo
                || NavService.SectionedPages[3].ASectionIsCurrentlyPromo && NavService.SectionedPages[3].Sections[1].IsCurrentPromo)
                {
                    <div class="section-container">
                        <div class="section-header @NavService.SectionedPages[3].Sections[1].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(1))">
                            Future Vision App
                            &nbsp;
                            @if(NavService.SectionedPages[3].Sections[1].IsCollapsedHeader == "collapsed-header")
                            {   <i class="fa fa-chevron-left"/>   }
                            else
                            {   <i class="fa fa-chevron-down"/>   }
                        </div>
                        <div class="section-content @NavService.SectionedPages[3].Sections[1].IsCollapsedContent">
                            <UnderConstruction />
                        </div>
                    </div>
                }
                @if (!NavService.SectionedPages[3].ASectionIsCurrentlyPromo
                || NavService.SectionedPages[3].ASectionIsCurrentlyPromo && NavService.SectionedPages[3].Sections[2].IsCurrentPromo)
                {
                    <div class="section-container">
                        <div class="section-header @NavService.SectionedPages[3].Sections[2].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(2))">
                            Unified Church App
                            &nbsp;
                            @if(NavService.SectionedPages[3].Sections[2].IsCollapsedHeader == "collapsed-header")
                            {   <i class="fa fa-chevron-left"/>   }
