                    @if (!NavService.SectionedPages[3].Sections[5].IsCurrentPromo)
                    {
                        <div class="section-container">
                            <div class="section-header @NavService.SectionedPages[3].Sections[5].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(5))">
