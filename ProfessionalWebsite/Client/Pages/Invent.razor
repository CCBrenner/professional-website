                    @for (int i = 0; i < 30; i++)
                    {
                        <div>This is the content.</div>
                    }
                </div>
            </div>
            <div class="section-container">
                <div class="section-header @sectionsLogic.Sections[1].IsCollapsedHeader" @onclick="(()=>sectionsLogic.ToggleCollapseSingle(1))">
