                {
                    <div class="section-container">
                        <div class="section-header @NavService.SectionedPages[3].Sections[3].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(3))">
                            Hang Out Availability App
                            &nbsp;
                            @if(NavService.SectionedPages[3].Sections[3].IsCollapsedHeader == "collapsed-header")
                            {   <i class="fa fa-chevron-left"/>   }
