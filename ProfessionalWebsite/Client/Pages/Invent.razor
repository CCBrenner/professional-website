                            {   <i class="fa fa-chevron-down"/>   }
                        </div>
                        <div class="section-content @NavService.SectionedPages[3].Sections[3].IsCollapsedContent">
                            <UnderConstruction />
                        </div>
                    </div>
                }
                @if (!NavService.SectionedPages[3].ASectionIsCurrentlyPromo
