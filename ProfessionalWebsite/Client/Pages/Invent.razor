                }
                @if (NavService.SectionedPages[3].ASectionIsCurrentlyPromo)
                {
                    @if (!NavService.SectionedPages[3].Sections[0].IsCurrentPromo)
                    {
                        <div class="section-container">
                            <div class="section-header @NavService.SectionedPages[3].Sections[0].IsCollapsedHeader" @onclick="(()=>NavService.SectionedPages[3].ToggleCollapseSingle(0))">
                                Overview
                                &nbsp;
                                <i class="fa fa-chevron-left" />
                            </div>
                        </div>
                    }
                    @if (!NavService.SectionedPages[3].Sections[1].IsCurrentPromo)
                    {
